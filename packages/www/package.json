{
  "name": "@zhquiz/www",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node -r tsconfig-paths/register server-dist/index.js",
    "dev": "yarn ts server/index.ts",
    "build": "yarn build:server && yarn build:nuxt",
    "build:nuxt": "nuxt build",
    "build:server": "tsc -P server/tsconfig.json",
    "lint": "eslint --ext '.js,.ts,.vue' --ignore-path .gitignore .",
    "ts": "ts-node -r tsconfig-paths/register -O '{\"module\":\"commonjs\"}'",
    "ts-dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register -O '{\"module\":\"commonjs\"}'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@nuxtjs/fontawesome": "^1.1.2",
    "@nuxtjs/pwa": "^3.3.5",
    "axios": "^0.21.1",
    "chinese-to-pinyin": "^1.3.1",
    "core-js": "^3.8.3",
    "fastify": "^3.14.0",
    "fastify-express": "^0.3.2",
    "fastify-swagger": "^4.4.2",
    "lokijs": "^1.5.11",
    "nuxt": "^2.14.12",
    "nuxt-buefy": "^0.4.4",
    "nuxt-property-decorator": "^2.9.1",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "vue-context": "^6.0.0",
    "@nuxt/types": "^2.14.12",
    "@nuxt/typescript-build": "^2.0.4",
    "@nuxtjs/eslint-config-typescript": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@types/lokijs": "^1.5.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.5.0",
    "import-sort-parser-typescript": "^6.0.0",
    "nuxt-typed-vuex": "^0.1.22",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "module"
    }
  }
}