{
  "name": "@zhquiz/www",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node -r tsconfig-paths/register server-dist/index.js",
    "dev": "export SERVER_PORT=${SERVER_PORT:-27082} && run-p 'dev:*'",
    "dev:nuxt": "nuxt dev",
    "dev:server": "yarn nodemon server/api/index.ts",
    "build": "run-s 'build:*'",
    "build:nuxt": "nuxt generate",
    "build:server": "tsc -P server/tsconfig.json",
    "lint": "eslint --ext '.js,.ts,.vue' --ignore-path .gitignore .",
    "ts": "ts-node -r tsconfig-paths/register -O '{\"module\":\"commonjs\",\"noImplicitAny\":false}'",
    "openapi": "wait-on tcp:$SERVER_PORT && curl -s http://localhost:$SERVER_PORT/api/doc/json -o ./assets/openapi.json && typegen ./assets/openapi.json > ./types/openapi.d.ts"
  },
  "dependencies": {
    "@databases/pg": "~5.0.0",
    "@magic-sdk/admin": "^1.3.0",
    "@patarapolw/zhlevel": "^0.1.5",
    "array-shuffle": "2",
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.5",
    "chinese-to-pinyin": "^1.3.1",
    "connect-pg-simple": "^6.2.1",
    "dayjs": "^1.10.6",
    "fastify": "^3.20.2",
    "fastify-cookie": "^5.3.1",
    "fastify-csrf": "^3.1.0",
    "fastify-rate-limit": "^5.6.2",
    "fastify-session": "^5.2.1",
    "fastify-static": "^4.2.3",
    "fastify-swagger": "^4.9.1",
    "jsonschema-definer": "^1.3.2",
    "node-gtts": "^2.0.2",
    "nodejieba": "^2.5.2",
    "openapi-client-axios": "^4.1.0",
    "short-uuid": "^4.2.0",
    "tsconfig-paths": "^3.11.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/fontawesome": "^1.1.2",
    "@nuxtjs/proxy": "^2.1.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@types/cheerio": "^0.22.30",
    "@types/connect-pg-simple": "^4.2.4",
    "@types/pino": "^6.3.11",
    "@types/wait-on": "^5.3.1",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.17.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "import-sort-parser-typescript": "^6.0.0",
    "magic-sdk": "^5.0.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.15.8",
    "nuxt-buefy": "^0.4.10",
    "nuxt-property-decorator": "^2.9.1",
    "nuxt-typed-vuex": "^0.2.0",
    "openapi-client-axios-typegen": "^3.14.1",
    "pino-pretty": "^6.0.0",
    "prettier": "^2.3.2",
    "sass": "^1.39.0",
    "sass-loader": "~10.1.1",
    "ts-node": "^10.2.1",
    "vue-context": "^6.0.0",
    "wait-on": "^6.0.0"
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
