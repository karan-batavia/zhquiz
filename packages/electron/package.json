{
  "name": "zhquiz",
  "version": "0.1.0",
  "private": true,
  "main": "lib/index.js",
  "author": {
    "email": "polv@polv.cc",
    "name": "Pacharapol Withayasakpunt",
    "url": "https://www.polv.cc"
  },
  "description": "ZhQuiz - Hanzi, Vocab and Sentences quizzing on your local machine, fully offline",
  "homepage": "https://www.zhquiz.cc",
  "repository": "github:zhquiz/zhquiz",
  "license": "MIT",
  "files": [
    "public/",
    "lib/",
    "assets/"
  ],
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev:e": "ts-node-dev src/server.ts",
    "dev:ui": "",
    "watch:e": "yarn build:e --watch",
    "build:e": "tsc -P src/tsconfig.json",
    "build:ui": "cd ../../submodules/ui && OUTDIR=../../packages/electron/public yarn build --modern",
    "dist": "electron-builder -wml"
  },
  "dependencies": {
    "chinese-to-pinyin": "^1.3.1",
    "death": "^1.1.0",
    "electron-context-menu": "^2.4.0",
    "electron-tabs": "^0.15.0",
    "fastify": "^3.9.2",
    "fastify-secure-session": "^2.3.0",
    "fastify-static": "^3.3.1",
    "fs-extra": "^9.0.1",
    "get-port": "^5.1.1",
    "gtts": "^0.2.1",
    "id128": "^1.6.3",
    "jsonschema-definer": "^1.3.2",
    "nodejieba": "^2.5.1",
    "pino": "^6.10.0",
    "sqlite": "^4.0.19",
    "sqlite3": "^5.0.1"
  },
  "devDependencies": {
    "@types/death": "^1.1.1",
    "@types/fs-extra": "^9.0.6",
    "@types/pino": "^6.3.5",
    "concurrently": "^5.3.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "import-sort-parser-typescript": "^6.0.0",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "build": {
    "appId": "cc.zhquiz.e-zhquiz",
    "protocols": [
      {
        "name": "App privileged protocol",
        "schemes": [
          "app"
        ]
      },
      {
        "name": "Server protocol",
        "schemes": [
          "server"
        ]
      }
    ],
    "asarUnpack": [
      "assets/"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/android-chrome-512x512.ico"
    },
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "public/favicon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png"
    }
  }
}
